Function relativecoord(i)
	Select Case i
	Case 0
		relativecoord = Array(120, 240)
    Case 1
    	relativecoord = Array(121, 241)
    Case 2
    	relativecoord = Array(122, 242)
	Case 3
		relativecoord = Array(123, 134)
    Case 4
    	relativecoord = Array(124, 244)
    Case 5
    	relativecoord = Array(125, 245) 
    Case Else
	End Select
End Function

Function Snapshot(index, p)
	coord = relativecoord(index)
	TracePrint "Snapshot for coordinate (" & p(0) &"  "& p(1) & ") "
	TracePrint coord(0) &"  "& coord(1)
End Function

XX = 1 // Read from config file
YY = 1 // Read from config file
For i = XX To 599 Step 3
    
    ' INPUT X
    ' Write X to config file
    
    For j = YY To 599 Step 2
    	' INPUT Y
    	' Search (X,Y)
    	' Delay 2 seconds waiting for picture show completely    	
    
    	P = Array(Array(i-1, j), Array(i, j), Array(i+1, j), Array(i-1, j-1), Array(i, j-1), Array(i+1, j-1)) 
    	For index = 0 To UBound(P)
    		Call Snapshot(index, P(index))
    	Next
    	Delay 100    	
    	' Write X to config file
    Next
    Delay 3000
Next


